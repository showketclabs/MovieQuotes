<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
      android:clickable="true"
       android:focusable="true"
     android:background="@drawable/relsel"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120px" >

        <TextView
            android:id="@+id/firstLine"
            android:layout_width="390px"
            android:layout_height="30px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="4.5px"
            android:gravity="center_vertical|center_horizontal|center"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="19.5px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondLine"
            android:layout_width="330px"
            android:layout_height="30px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="42px"
            android:gravity="center_vertical|center_horizontal|center"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="19.5px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdLine"
            android:layout_width="150px"
            android:layout_height="30px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="75px"
            android:gravity="center_vertical|center_horizontal|center"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="19.5px"
            android:textStyle="bold" />

        

        <Button
            android:id="@+id/cb1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120px"
            android:layout_height="45px"
            android:layout_marginLeft="337.5px"
            android:layout_marginTop="30px"
           android:visibility="invisible"
             android:text="Delete"
             android:textColor="#ffffff"
            android:background="@drawable/deletebtn" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="60px"
            android:layout_height="45px"
            android:layout_alignBaseline="@+id/cb1"
            android:layout_alignBottom="@+id/cb1"
            android:enabled="false"
            android:layout_alignRight="@+id/secondLine"
            android:layout_toRightOf="@+id/thirdLine"
            android:text="     " />
    </RelativeLayout>

