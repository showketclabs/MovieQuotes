<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@drawable/relsel"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="465px"
        android:layout_height="120px" >

        <TextView
            android:id="@+id/firstLine"
            android:layout_width="390px"
            android:layout_height="30px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="3px"
            android:gravity="center_vertical|center_horizontal|center"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="19.5px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondLine"
            android:layout_width="330px"
            android:layout_height="30px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="37.5px"
            android:gravity="center_vertical|center_horizontal|center"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="19.5px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdLine"
            android:layout_width="150px"
            android:layout_height="30px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="70.5px"
            android:gravity="center_vertical|center_horizontal|center"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="19.5px"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb1"
            style="@drawable/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360px"
            android:layout_marginTop="30px"
            
            android:button="@drawable/checkbox"
          
            android:gravity="center_vertical|center_horizontal|center" />

    </RelativeLayout>

</RelativeLayout>