<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1184px"
    android:background="#000000" >

    <RelativeLayout
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_5_1"
        android:orientation="vertical" >

     

        <RelativeLayout
            android:layout_width="720px"
            android:layout_height="220px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >
        

            <Button
                android:id="@+id/btnsearch"
                android:layout_width="170px"
                android:layout_height="104px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="184px"
                android:background="@drawable/btn_search" />
          

            <Button
                android:id="@+id/btnmore"
                android:layout_width="190px"
                android:layout_height="104px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="530px"
                android:background="@drawable/btn_more" />
     

            <Button
                android:id="@+id/btnfav"
                android:layout_width="188px"
                android:layout_height="104px"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/btnsearch"
                android:layout_marginLeft="346px"
                android:background="@drawable/btn_press" />
        

            <Button
                android:id="@+id/btnlist"
                android:layout_width="178px"
                android:layout_height="104px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_list" />
        

            <Button
                android:id="@+id/btnback"
                android:layout_width="273px"
                android:layout_height="112px"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5px"
                android:background="@drawable/btn_back" />

            <Button
                android:id="@+id/btnshake"
                android:layout_width="290px"
                android:layout_height="136px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_shake" />

            <Button
                android:id="@+id/btnhlp"
                android:layout_width="273px"
                android:layout_height="112px"
                android:layout_above="@+id/btnmore"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5px"
                android:background="@drawable/btn_help" />
    
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="285px"
            android:layout_height="340px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18.5px"
            android:layout_marginTop="620px" >

           <Button
            android:id="@+id/shareb"
            android:layout_width="280px"
            android:layout_height="90.5px"
            android:layout_marginLeft="6px"
            android:layout_marginTop="220px"
            android:background="@drawable/btn_share" />
      <Button
            android:id="@+id/revealbtn"
            android:layout_width="280px"
            android:layout_height="90.5px"
             android:layout_marginLeft="6px"
            android:layout_marginTop="7.5px"
            android:background="@drawable/btn_reveal" />
        <Button
            android:id="@+id/favoriteb"
            android:layout_width="280px"
            android:layout_height="90.5px"
            android:layout_marginLeft="6px"
            android:layout_marginTop="100.5px"
            android:visibility="invisible"
           
            android:background="@drawable/btn_fav" />

       
        

         <Button
             android:id="@+id/button1"
              android:layout_width="280px"
            android:layout_height="90.5px"
            android:layout_marginLeft="6px"
            android:layout_marginTop="112.5px"
           
              android:background="@drawable/btn_fav"
              />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="370px"
            android:layout_height="725px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="330.5px"
            android:layout_marginTop="200.5px"
            android:background="@drawable/text_bbox" >

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="330px"
                android:layout_height="670px"
                android:layout_marginLeft="17.5px"
                android:layout_marginTop="30px"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/movie"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="0px"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:paddingBottom="30px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:paddingTop="30px"
                    android:textColor="#000000"
                    android:textSize="37.5px"
                    android:textStyle="bold" />
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
