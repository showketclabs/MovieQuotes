<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1184px"
    android:background="#000000" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/EditText01"
            android:layout_width="fill_parent"
            android:layout_height="70px"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginBottom="5px"
            android:layout_marginTop="5px"
            android:background="@drawable/search_bar"
            android:ems="10"
            android:hint="Search"
            android:paddingLeft="79.5px"
            android:paddingRight="25px"
            android:singleLine="true"
            android:textSize="30px" >

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="700px"
            android:layout_height="886px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="0px"
             
            android:background="@drawable/box" >
      

            <ListView
                android:id="@+id/list_twoligne_itineraire"
                android:layout_width="680px"
                android:layout_height="865px"
                android:layout_marginTop="10px"
                  android:layout_marginLeft="10px"
                android:cacheColorHint="@android:color/transparent"
                android:fastScrollEnabled="true" >
        
            </ListView>
        
    
        </RelativeLayout>
        

        <RelativeLayout
            android:layout_width="720px"
            android:layout_height="220px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >
        

        
        

            
        

            <Button
                android:id="@+id/btnsearch"
                android:layout_width="170px"
                android:layout_height="107px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="184px"
                android:background="@drawable/btn_search" />
          

            <Button
                android:id="@+id/btnmore"
                android:layout_width="190px"
                android:layout_height="104px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="530px"
                android:background="@drawable/btn_more" />
     

            <Button
                android:id="@+id/btnfav"
                android:layout_width="188px"
                android:layout_height="104px"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/btnsearch"
                android:layout_marginLeft="346px"
                android:background="@drawable/btn_press" />
        

            <Button
                android:id="@+id/btnlist"
                android:layout_width="178px"
                android:layout_height="104px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_list" />
        

            <Button
                android:id="@+id/btnback"
                android:layout_width="273px"
                android:layout_height="112px"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5px"
                android:background="@drawable/btn_back" />

            <Button
                android:id="@+id/btnshake"
                android:layout_width="290px"
                android:layout_height="136px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_shake" />

            <Button
                android:id="@+id/btnhlp"
                android:layout_width="273px"
                android:layout_height="112px"
                android:layout_above="@+id/btnmore"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5px"
                android:background="@drawable/btn_help" />
    
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>